<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomeTender.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Home Page"/>
            <Button Text = "Library List"
              x:Name = "Button1"
              BackgroundColor = "#2196F3"
              TextColor = "WhiteSmoke"
              HeightRequest = "50"
              Clicked="GoToLibraryListPage"/>

           <Button Text = "Event List"
           x:Name = "Button2"
           BackgroundColor = "#2196F3"
           TextColor = "WhiteSmoke"
           HeightRequest = "50"
           Clicked="GoToEventsPage"/>  

        </StackLayout>
    </ContentPage.Content>
</ContentPage>